<div class="wrapper" style="background: url('<%= image_url "background.jpg"%>') no-repeat center center fixed;"></div>
<div class="show-container">
  <% if !@user.first_name.present? || !@user.last_name.present? %>
    <h2>Please fill in your personal information</h2>
  <% end %>

  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
  <%= cl_image_tag @user.photo.url(:show_profile), alt: "alttext", class:"user-propic"%>
  <%= @user.location %>
  <%= @user.age %>
  <%= @user.gender %>

  <ul>
    <%@user.appointments.each do |appointment| %>
      <li>
        <%= appointment.nudie.user.first_name %>
        <%= appointment.appointment_date %>
      </li>
    <% end %>
  </ul>


  <%= link_to "Edit profile", edit_user_registration_path, class:'btn btn-dark'%>
  <%= link_to "I'm a nudie too", new_nudy_path, class:'btn btn-dark'%>
</div>
