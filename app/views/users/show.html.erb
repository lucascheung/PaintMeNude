<div class="wrapper" style="background: url('<%= image_url "background.jpg"%>') no-repeat center center fixed;"></div>

<div class="show-container">
  <div class="profile-container">

    <div class="profile-content">
      <%= cl_image_tag @user.photo.url(:show_profile), alt: "alttext"%>
      <div class="show-profile-text">
        <h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
        <h3><%= @user.location%></h3>
        <h3><%= @user.age %></h3>
        <h3><%= @user.gender %></h3>
      </div>
    </div>
  </div>

  <%= link_to edit_user_registration_path, class:'btn-red small dark' do %>
    <i class="far fa-edit"></i> Edit Profile
  <% end %>

  <div class="appointments">
    <h3>You are painting...</h3>
    <% if @user.appointments.present? %>
      <%= render 'painter_show' %>
    <% else %>
      <p>You have no upcoming painting appointments</p>
    <% end %>
    <br>
    <% if @user.nudie.present? %>
      <h3>You are being painted by...</h3>
      <% if @user.nudie.appointments.present? %>
        <%= render 'canvas_show' %>
      <% else %>
        <p>You have no upcoming canvas appointments</p>
      <% end %>
    <% else %>
      <%= link_to new_nudy_path(current_user), class:'btn-red small dark' do %>
        <i class="fas fa-plus"></i> Become a Canvas
      <% end %>
    <% end %>
  </div>
</div>
