<% @nudies.each do |nudie| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <%= link_to nudy_path(nudie) do %>
      <div class="nudie-card">
        <div class="nudie-card-photo" style="background-image: linear-gradient(180deg, rgba(0,0,0,0) 80%, rgba(0,0,0,0.8) 100%), url(<%= cl_image_path nudie.user.photo.url(:index_profile) %>);"></div>
        <div class="nudie-card-content">
          <%= "#{nudie.user.first_name}, #{nudie.user.age}" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
